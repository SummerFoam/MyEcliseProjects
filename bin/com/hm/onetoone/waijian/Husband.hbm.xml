<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.hm.onetoone.waijian" auto-import="false">
<!-- Employee类名table：表名 -->
	<class name="Husband" table="husband">
	<!-- id元素指定主键属性 -->
	<id name="id" column="id" type="java.lang.Integer">
	<!-- generator元素用于指定主键的生成策略 increment自增-->
	<generator class="increment"></generator>
	</id>
	<property name="name" type="java.lang.String">
	<column name="name" not-null="true"></column>
	</property>
	<property name="age" type="java.lang.Integer">
	<column name="age" not-null="true"></column>
	</property>
	<one-to-one name="wife" class="Wife" property-ref="husband" cascade="all"></one-to-one>
	</class>
</hibernate-mapping>
